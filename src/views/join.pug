extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="E-mail", type="email", name="email", required)
        input(placeholder="UserName, ID", type="text",name="username",required)
        input(placeholder="Password", type="password",name="password",required)
        input(placeholder="Confirm Password", type="password2",name="password2",required)
        input(placeholder="Name", type="text",name="name",required)
        input(placeholder="Loacation", type="text",name="location")
        input(type="submit", value="Join")
    hr
    div
        span Already have an account? 
        a(href="/login") Log in Now &rarr;