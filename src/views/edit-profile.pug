extends base

block content
    form(method="POST")
        input(placeholder="E-mail", type="email", name="email", required, value=loggedInUser.email)
        input(placeholder="UserName, ID", type="text",name="username",required, value=loggedInUser.username)
        input(placeholder="Name", type="text",name="name",required, value=loggedInUser.name)
        input(placeholder="Loacation", type="text",name="location", value=loggedInUser.location)
        input(type="submit", value="Update Profile")